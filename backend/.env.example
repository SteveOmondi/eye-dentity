# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/eye_dentity?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# API Keys - AI Services
ANTHROPIC_API_KEY=your-claude-api-key
OPENAI_API_KEY=your-openai-api-key

# API Keys - Cloud Services
DIGITALOCEAN_API_TOKEN=your-digitalocean-api-token
CLOUDFLARE_API_KEY=your-cloudflare-api-key
CLOUDFLARE_API_EMAIL=your-cloudflare-email
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# API Keys - Payment
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# API Keys - Email
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# API Keys - Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ADMIN_CHAT_ID=your-telegram-chat-id

# API Keys - Marketing (Phase 3)
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-access-token

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token

# Redis (for sessions and caching)
REDIS_URL=redis://localhost:6379

# Storage (DigitalOcean Spaces or S3-compatible)
STORAGE_ENDPOINT=https://nyc3.digitaloceanspaces.com
STORAGE_ACCESS_KEY=your-spaces-access-key
STORAGE_SECRET_KEY=your-spaces-secret-key
STORAGE_BUCKET=eye-dentity-assets
