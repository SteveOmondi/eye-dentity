# Eye-Dentity Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# ====================
# DATABASE (Your Existing PostgreSQL)
# ====================
# Format: postgresql://username:password@host:port/database
# Example: postgresql://eyeuser:secretpass@your-db-host.com:5432/eyedentity
DATABASE_URL=postgresql://username:password@host:5432/eyedentity?schema=public

# ====================
# APPLICATION
# ====================
NODE_ENV=production
API_PORT=3000

# Application URLs
FRONTEND_URL=https://eyedentity.com
BACKEND_URL=https://api.eyedentity.com

# ====================
# AUTHENTICATION
# ====================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long

# ====================
# STRIPE PAYMENT PROCESSING
# ====================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# ====================
# ANTHROPIC AI (Claude)
# ====================
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# ====================
# CLOUD STORAGE (AWS S3 or Compatible)
# ====================
# AWS or DigitalOcean Spaces or Backblaze B2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=eyedentity-uploads

# ====================
# REDIS (Optional but Recommended)
# ====================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_PORT=6379

# ====================
# META (FACEBOOK/INSTAGRAM) MARKETING API
# ====================
# Get from: https://developers.facebook.com/
META_APP_ID=your-app-id
META_APP_SECRET=your-app-secret
META_ACCESS_TOKEN=your-long-lived-token
META_PIXEL_ID=your-pixel-id

# ====================
# LINKEDIN MARKETING API
# ====================
# Get from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your-client-id
LINKEDIN_CLIENT_SECRET=your-client-secret

# ====================
# GOOGLE ADS API
# ====================
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_DEVELOPER_TOKEN=your-developer-token

# ====================
# TELEGRAM NOTIFICATIONS (Optional)
# ====================
# Get from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_ADMIN_CHAT_ID=your-chat-id

# ====================
# EMAIL (Optional)
# ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@eyedentity.com

# ====================
# GITHUB (For CI/CD)
# ====================
GITHUB_REPOSITORY=YourUsername/eye-dentity
